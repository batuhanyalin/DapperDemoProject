@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <br />
    <a class="btn btn-success" href="/Product/CreateProduct">Yeni Ürün</a>
    <br />
    <h2>Ürün Listesi</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Ürün Adı</th>
                <th>Kategori</th>
                <th>Stok</th>
                <th>Fiyat</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Stock</td>
                    <td>@item.Price</td>
                    <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-warning">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

