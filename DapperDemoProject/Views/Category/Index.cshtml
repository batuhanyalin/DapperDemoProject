@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <br />
    <a class="btn btn-success" href="/Category/CreateCategory">Yeni Kategori</a>
    <br />
    <h2>Kategori Listesi</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

